<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customer.PropertyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        android:background="@color/md_theme_primary">

        <TextView
            android:id="@+id/propertyNameLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:textColor="@color/md_theme_onPrimary"/>

        <TextView
            android:id="@+id/propertyLocationLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/poppins_bold"
            android:layout_centerVertical="true"
            android:layout_below="@+id/propertyNameLbl"
            android:textColor="@color/md_theme_onPrimary"
            app:drawableStartCompat="@drawable/ic_location"
            app:drawableTint="@color/md_theme_onPrimary" />

        <TextView
            android:id="@+id/propertyPriceLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/poppins_bold"
            android:layout_centerVertical="true"
            android:layout_below="@+id/propertyLocationLbl"
            android:textColor="@color/md_theme_onPrimary"
            app:drawableStartCompat="@drawable/ic_pound"
            app:drawableTint="@color/md_theme_onPrimary" />
    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.CardView"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        app:contentPadding="16dp"
        android:backgroundTint="@color/md_theme_onPrimary">

        <TextView
            android:id="@+id/propertyDescriptionLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/poppins_regular" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.CardView"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        app:contentPadding="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/md_theme_onPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/landlordDetailsLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/landlord_details_lbl"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:id="@+id/landlordNameLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/landlordEmailLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEnquiry"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="150dp"
            android:layout_height="62dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/md_theme_primary"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/enquireBtn_text"
            android:layout_alignParentEnd="true"
            app:cornerRadius="6dp" />
    </RelativeLayout>



</LinearLayout>